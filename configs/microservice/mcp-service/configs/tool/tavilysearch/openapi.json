    "/tavily/news/date": {
      "post": {
        "summary": "按指定日期范围搜索新闻",
        "operationId": "tavily_date_search",
        "deprecated": false,
        "description": "按指定日期范围搜索新闻: 在一个明确的历史时间段内搜索新闻。这是唯一需要Agent提供详细时间参数的工具。适用于需要对特定历史事件进行分析的场景。Agent需要提供查询(query)、开始日期(start_date)和结束日期(end_date)，格式均为 'YYYY-MM-DD'，和可选的最大结果数(max_results)。",
        "tags": [
          "Tavily News"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "query",
                  "start_date",
                  "end_date"
                ],
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "搜索关键词",
                    "example": "OpenAI 最新动态"
                  },
                  "start_date": {
                    "type": "string",
                    "description": "开始日期，格式 'YYYY-MM-DD'",
                    "example": "2026-01-01"
                  },
                  "end_date": {
                    "type": "string",
                    "description": "结束日期，格式 'YYYY-MM-DD'",
                    "example": "2026-01-07"
                  },
                  "max_results": {
                    "type": "integer",
                    "description": "返回结果的最大数量 (默认 15)",
                    "default": 15,
                    "example": 15
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "搜索成功",
